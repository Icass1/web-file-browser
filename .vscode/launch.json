    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch backend",
            "type": "debugpy",
            "request": "launch",
            "module": "poetry",
            "cwd": "${workspaceFolder}/server",
            "args": [
                "run",
                "flask",
                "run"
            ],
            "console": "integratedTerminal",
            "python": "/usr/bin/python3",
        },
        {
            "name": "Launch frontend",
            "command": "npm start",
            "request": "launch",
            "type": "node-terminal",
            "cwd": "${workspaceFolder}/client"
        },
    ]
}